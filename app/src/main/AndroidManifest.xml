<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nsrin.tirupatibalaji">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.WithActionBar" />
        <activity
            android:name=".ViewArticle"
            android:label="View Article"
            android:theme="@style/AppTheme.WithActionBar"/>
        <activity
            android:name=".ContactMe"
            android:label="Contact Me"
            android:theme="@style/AppTheme.WithActionBar" />
        <activity
            android:name=".AboutMe"
            android:label="About Me"
            android:theme="@style/AppTheme.WithActionBar"></activity>
    </application>

</manifest>